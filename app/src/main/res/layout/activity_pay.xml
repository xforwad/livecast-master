<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/public_title_bar" />

    <TextView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_container"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:text="需支付: "
        android:textColor="@color/colorPrompt2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_payment_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_container"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/view1"
        android:text="0 元"
        android:textColor="@color/colorRed"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_payment_price"
        android:layout_marginTop="10dp"
        android:background="@color/colorBackground"
        android:gravity="left|center"
        android:padding="10dp"
        android:text="支付方式" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:padding="20dp">

        <RadioButton
            android:id="@+id/wechatpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/icon_wechat_pay"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/rb_choose_sex"
            android:text="微信支付"
            android:textColor="@color/colorPrompt2"
            android:textSize="16sp" />

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine" />

        <RadioButton
            android:layout_marginTop="20dp"
            android:id="@+id/alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/icon_alpay_pay"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/rb_choose_sex"
            android:text="支付宝支付"
            android:textColor="@color/colorPrompt2"
            android:textSize="16sp" />
    </RadioGroup>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/radioGroup"
        android:background="@color/colorBackground"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_pay_btn"
            android:layout_width="330dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="21dp"
            android:background="@drawable/red_r4"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>