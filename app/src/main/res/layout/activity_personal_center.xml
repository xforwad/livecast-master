<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".mvp.ui.activity.account.PersonalCenterActivity">

    <include layout="@layout/public_title_bar" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar_container"
        android:background="@color/colorLine" />

    <TextView
        android:id="@+id/tv_update_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:padding="20dp"
        android:text="大王老师"
        android:textColor="@color/colorNumber"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view1"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_go"
        android:padding="20dp"
        android:text="修改资料"
        android:textColor="@color/colorPrompt"
        android:textSize="14sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_update_info"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLine" />

    <TextView
        android:id="@+id/tv_update_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:padding="20dp"
        android:text="手机号码"
        android:textColor="@color/colorNumber"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view2"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_go"
        android:padding="20dp"
        android:textColor="@color/colorPrompt"
        android:textSize="14sp"
        tools:text="12345678901" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_update_phone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLine" />

    <TextView
        android:id="@+id/tv_update_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:padding="20dp"
        android:text="密码修改"
        android:textColor="@color/colorNumber"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view3"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_go"
        android:padding="20dp"
        android:textColor="@color/colorPrompt"
        android:textSize="14sp" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_update_pwd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLine" />

    <TextView
        android:id="@+id/tv_update_hoddy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:padding="20dp"
        android:text="修改兴趣"
        android:textColor="@color/colorNumber"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view4"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_go"
        android:padding="20dp"
        android:textColor="@color/colorPrompt"
        android:textSize="14sp" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_update_pwd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLine" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/tv_update_hoddy"
        android:background="@color/colorBackground" />

    <TextView
        android:id="@+id/tv_name_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view6"
        android:padding="20dp"
        android:text="主播实名认证"
        android:textColor="@color/colorNumber"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view6"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:text="请用网页认证www.yenei.tvco"
        android:textColor="@color/colorPrompt"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_name_check"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLine" />

    <TextView
        android:id="@+id/tv_logout_btn"
        android:layout_marginBottom="21dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="330dp"
        android:layout_height="44dp"
        android:text="退出登录"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/red_r4"/>
</com.zhy.autolayout.AutoRelativeLayout>