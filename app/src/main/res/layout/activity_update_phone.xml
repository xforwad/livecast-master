<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<include layout="@layout/public_title_bar"/>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/verify_code_send_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="用于课程的学习提醒等服务，手机号不会对外公开，请放心!"
        android:textColor="@color/colorPrompt"
        android:textSize="12sp"
        android:maxLines="1"/>

    <include layout="@layout/public_account_layout" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/tv_save_btn"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="330dp"
        android:layout_height="44dp"
        android:text="保存"
        android:textSize="18sp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/blue_one_r2"/>
</com.zhy.autolayout.AutoLinearLayout>