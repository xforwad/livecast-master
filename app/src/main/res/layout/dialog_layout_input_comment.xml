<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_touch_outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/container_input" />

    <RelativeLayout
        android:id="@+id/container_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F8F8F8">

        <EditText
            android:id="@+id/editext_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_toStartOf="@+id/img_send"
            android:background="@drawable/bg_gray_boundary_r6"
            android:gravity="start|top"
            android:lines="4"
            android:maxLines="4"
            android:minLines="2"
            android:paddingBottom="6dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:textColor="@android:color/black"
            android:textColorHint="#909398"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_send_msg" />

    </RelativeLayout>
</RelativeLayout>