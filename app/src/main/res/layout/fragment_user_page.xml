<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <include layout="@layout/public_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_container"
        android:fadingEdge="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.aidingyun.ynlive.mvp.ui.widget.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="21dp"
                    android:src="@drawable/pic5" />

                <RelativeLayout
                    android:id="@+id/user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar_container"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@+id/avatar">

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar_container"
                        android:layout_marginTop="17dp"
                        android:ellipsize="end"
                        android:maxEms="20"
                        android:maxLines="1"
                        android:text="登陆/注册"
                        android:textColor="@color/colorPrompt2"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/userId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nickname"
                        android:layout_marginTop="8dp"
                        android:maxLength="20"
                        android:text="登陆有惊喜"
                        android:textColor="@color/colorPrompt"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:background="@mipmap/icon_arrow_right" />
                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorLine" />

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_wealth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/money"
                        android:gravity="center"
                        android:text="  财富值"
                        android:textColor="@color/colorPrompt"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/line1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/money"
                        android:gravity="center"
                        android:text="  余额"
                        android:textColor="@color/colorPrompt"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_recharge"
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/view"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_toStartOf="@+id/lin2"
                    android:background="@drawable/blue_two_r2"
                    android:gravity="center"
                    android:text="充值"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/lin2"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorBackground" />

                <LinearLayout
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_below="@+id/view2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/user_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/my_icon_study_default"
                        android:gravity="center"
                        android:text="我的学习"
                        android:textColor="@color/colorNumber"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/user_collect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/my_icon_collection_default"
                        android:gravity="center"
                        android:text="我的收藏"
                        android:textColor="@color/colorNumber"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/user_bill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/my_icon_bill_default"
                        android:gravity="center"
                        android:text="我的账单"
                        android:textColor="@color/colorNumber"
                        android:textSize="14sp" />

                    <com.aidingyun.ynlive.mvp.ui.widget.BadgeButton
                        android:id="@+id/user_notification"
                        style="@style/item_tv_tag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:drawablePadding="8dp"
                        android:drawableTop="@drawable/my_icon_message_default"
                        android:gravity="center"
                        android:text="消息通知"
                        android:textColor="@color/colorNumber"
                        android:textSize="14sp"
                        app:btnBadgeVisible="true"
                        tools:btnBadgeText="10" />
                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view3"
                    android:background="@color/colorBackground" />

                <LinearLayout
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view4"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/one"
                        style="@style/linear_mine">

                        <ImageView
                            style="@style/linear_mine_img_tag"
                            android:src="@drawable/one" />

                        <TextView
                            style="@style/linear_mine_text"
                            android:text="我的关注" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView style="@style/linesr_mine_img_right" />
                    </LinearLayout>

                    <View style="@style/view_line" />

                    <LinearLayout
                        android:id="@+id/two"
                        style="@style/linear_mine">

                        <ImageView
                            style="@style/linear_mine_img_tag"
                            android:src="@drawable/two" />

                        <TextView
                            style="@style/linear_mine_text"
                            android:text="我的提问" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView style="@style/linesr_mine_img_right" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="42dp"
                        android:background="@color/colorLine" />

                    <LinearLayout
                        android:id="@+id/three"
                        style="@style/linear_mine">

                        <ImageView
                            style="@style/linear_mine_img_tag"
                            android:src="@drawable/three" />

                        <TextView
                            style="@style/linear_mine_text"
                            android:text="我的一对一" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView style="@style/linesr_mine_img_right" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view5"
                    android:background="@color/colorBackground" />

                <LinearLayout
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view6"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/four"
                        style="@style/linear_mine">

                        <ImageView
                            style="@style/linear_mine_img_tag"
                            android:src="@drawable/four" />

                        <TextView
                            style="@style/linear_mine_text"

                            android:text="订单管理" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView style="@style/linesr_mine_img_right" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="42dp"
                        android:background="@color/colorLine" />

                    <LinearLayout
                        android:id="@+id/five"
                        style="@style/linear_mine">

                        <ImageView
                            style="@style/linear_mine_img_tag"
                            android:src="@drawable/five" />

                        <TextView
                            style="@style/linear_mine_text"

                            android:text="观看历史" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView style="@style/linesr_mine_img_right" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="42dp"
                        android:background="@color/colorLine" />

                    <LinearLayout
                        android:id="@+id/six"
                        style="@style/linear_mine">

                        <ImageView
                            style="@style/linear_mine_img_tag"
                            android:src="@drawable/six" />

                        <TextView
                            style="@style/linear_mine_text"

                            android:text="我的下载" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView style="@style/linesr_mine_img_right" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view8"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view7"
                    android:background="@color/colorBackground" />

                <LinearLayout
                    android:id="@+id/view9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view8"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/seven"
                        style="@style/linear_mine">

                        <ImageView
                            style="@style/linear_mine_img_tag"
                            android:src="@drawable/seven" />

                        <TextView
                            style="@style/linear_mine_text"

                            android:text="联系我们" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView style="@style/linesr_mine_img_right" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="42dp"
                        android:background="@color/colorLine" />

                    <LinearLayout
                        android:id="@+id/eight"
                        style="@style/linear_mine">

                        <ImageView
                            style="@style/linear_mine_img_tag"
                            android:src="@drawable/eight" />

                        <TextView
                            style="@style/linear_mine_text"

                            android:text="系统设置" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView style="@style/linesr_mine_img_right" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:layout_below="@+id/view9"
                    android:layout_centerVertical="true"
                    android:background="@color/colorBackground"
                    android:gravity="center"
                    android:text="客服热线：0755-666666666"
                    android:textColor="@color/colorPrompt" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
