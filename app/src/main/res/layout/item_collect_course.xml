<?xml version="1.0" encoding="utf-8"?>
<com.aidingyun.ynlive.mvp.ui.widget.swipe.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/course_detail_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="164dp"
            android:layout_height="95dp">

            <ImageView
                android:id="@+id/item_recyc_type3_item_img"
                android:layout_width="164dp"
                android:layout_height="95dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/young" />

            <ImageView
                android:id="@+id/tv_live_status"
                android:layout_width="55dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:src="@mipmap/icon_coursetype_live" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AE影视后期片头动画"
                android:textColor="@color/colorTitleTextview"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_lable"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/stars_selected"
                    android:text="4.9分"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_collent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="0"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人收藏"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="@color/text_sticker_blue_easy_photos"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金币"
                    android:textColor="@color/text_sticker_blue_easy_photos" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/material_red_400"
        android:gravity="center">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="1"
            android:text="取消收藏"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</com.aidingyun.ynlive.mvp.ui.widget.swipe.SwipeItemLayout>
