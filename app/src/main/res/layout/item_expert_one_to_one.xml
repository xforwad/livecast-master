<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_default" />
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:id="@+id/right_relativelayout"
        android:layout_toRightOf="@+id/avatar"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:textSize="15sp"
            android:textColor="@color/colorNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="张老师"/>

        <TextView
            android:id="@+id/tv_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrompt"
            android:textSize="12sp"
            tools:text="浙江大学计算机学院教授" />
        <TextView
            tools:text="6门课程 | 1000人关注"
            android:id="@+id/tv_course_attention"
            android:layout_below="@+id/tv_user_title"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/pay_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_title"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            tools:text="500"
            android:layout_marginRight="70dp"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:id="@+id/pay_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_title"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            tools:text="金币/小时"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐学习："
        android:textSize="14sp"
        android:textColor="@color/colorPrompt"/>
    <TextView
        android:id="@+id/tv_course_title"
        android:layout_toEndOf="@+id/tv"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速提高个人情商"
        android:textSize="14sp"
        android:textColor="@color/colorPrompt2"/>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_course_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
</RelativeLayout>