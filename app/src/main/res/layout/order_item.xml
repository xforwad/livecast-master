<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="235dp"
    android:background="@color/material_white"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-11-29 11:59"
            android:textSize="14sp"
            android:textColor="@color/colorcontentTextview"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_order_time"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorcontentTextview"
                android:textSize="14sp"
                android:text="订单号:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorcontentTextview"
                android:textSize="14sp"
                android:text=""/>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <include  layout="@layout/recycle_item_type3_item" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorcontentTextview"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/dp_10"
            android:text="实付:"/>

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:textColor="@color/material_red_400"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_red_400"
            android:textSize="12sp"
            android:text="金币"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/material_gray"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <TextView
            android:id="@+id/tv_payment_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="付款状态"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textColor="@color/material_red_400"/>

        <TextView
            android:id="@+id/tv_cancel_btn"
            android:layout_width="88dp"
            android:layout_height="30dp"
            android:background="@drawable/item_bg_r4"
            android:text="取消订单"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/tv_comment_btn"
            android:visibility="gone"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:padding="6dp"
            />

        <TextView
            android:id="@+id/tv_comment_btn"
            android:layout_width="88dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_red"
            android:text="立即评论"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/material_red_400"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="6dp"
            />
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>
