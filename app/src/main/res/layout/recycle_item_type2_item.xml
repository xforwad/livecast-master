<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="190dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/head_layout"
            android:layout_width="164dp"
            android:layout_height="104dp"
            >
            <ImageView
                android:layout_width="164dp"
                android:adjustViewBounds="true"
                android:layout_height="104dp"
                android:src="@mipmap/young"
                android:scaleType="centerCrop"
                android:id="@+id/iv_head" />
            <ImageView
                android:id="@+id/tv_live_status"
                android:layout_width="55dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:src="@mipmap/icon_coursetype_live"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_layout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                tools:text="AE影视后期片头动画"
                android:textColor="@color/colorTitleTextview"
                android:textSize="15sp"
                android:id="@+id/tv_title" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorcontentTextview"
                    android:drawableLeft="@drawable/stars_selected"
                    tools:text=" 5.0"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_collent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/colorcontentTextview"
                    tools:text="0人收藏"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textSize="20sp"
                    android:textColor="@color/text_sticker_blue_easy_photos"
                    />
                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_sticker_blue_easy_photos"
                    android:text="金币"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>
