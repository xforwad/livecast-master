<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@mipmap/home_icon_calendar" />

        <TextView

            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/home"
            android:text="24日18:00"
            android:textColor="@color/colorRed"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_timer"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="-4dp"
            android:layout_toEndOf="@+id/home"
            android:text="您有课程待开始"
            android:textColor="@color/colorNumber"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="54dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/nav_icon_search_default" />

        <com.aidingyun.ynlive.mvp.ui.widget.BadgeButton
            android:id="@+id/user_notification"
            style="@style/item_tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/nav_bar_icon_news_default"
            android:textColor="@color/colorNumber"
            app:btnBadgeVisible="true"
            tools:btnBadgeText="10" />

</RelativeLayout>

